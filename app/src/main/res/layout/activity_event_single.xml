<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.nisb.nisbapp.EventSingleActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="center"
        android:background="#fff"
        android:textColor="#000"
        android:elevation="3dp"
        android:id="@+id/events_single_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:id="@+id/events_single_extra"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/nisbcardback"
                android:adjustViewBounds="true"
                android:id="@+id/events_single_cover"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp"
                android:id="@+id/events_single_text"
                android:textSize="15dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Share"
                    android:layout_margin="3dp"
                    android:id="@+id/events_single_share"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Remind"
                    android:layout_margin="3dp"
                    android:id="@+id/events_single_remind"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="Feedback"
                    android:layout_margin="3dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:id="@+id/events_register"
                android:visibility="gone"
                android:background="@color/colorButtonBack"
                android:textColor="@color/colorButtonText"
                android:layout_margin="10dp"/>
            
        </LinearLayout>
    </ScrollView>


</LinearLayout>
