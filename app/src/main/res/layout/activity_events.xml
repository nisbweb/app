<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/events_tabhost">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/events_all">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="All Events from NISB"
                        android:gravity="center"
                        android:background="@color/colorTitleBack"
                        android:textSize="@dimen/TitleSize"
                        android:textStyle="bold"
                        android:elevation="3dp"
                        android:textColor="@color/colorTitleText"/>

                    <android.support.v4.widget.SwipeRefreshLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/events_refresh">
                    <GridView
                        android:id="@+id/events_all_grid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnWidth="135dp"
                        android:horizontalSpacing="5dp"

                        android:numColumns="1"
                        android:verticalSpacing="15dp"
                        android:stretchMode="columnWidth">
                    </GridView>
                    </android.support.v4.widget.SwipeRefreshLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/events_cs">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Computer Society Events"
                        android:gravity="center"
                        android:background="@color/colorTitleBack"
                        android:textSize="@dimen/TitleSize"
                        android:elevation="3dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTitleText"/>

                    <android.support.v4.widget.SwipeRefreshLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/events_refresh2">
                    <GridView
                        android:id="@+id/events_cs_grid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:columnWidth="135dp"
                        android:horizontalSpacing="5dp"
                        android:numColumns="1"
                        android:verticalSpacing="15dp"
                        android:stretchMode="columnWidth">
                    </GridView>
                    </android.support.v4.widget.SwipeRefreshLayout>
                </LinearLayout>

            </FrameLayout>


            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimaryDark"
                android:elevation="3dp"/>

        </LinearLayout>
    </TabHost>

</LinearLayout>