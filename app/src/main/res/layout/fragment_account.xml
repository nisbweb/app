<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.nisb.nisbapp.fragments.AccountFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:gravity="center"
    android:elevation="5dp"
    android:background="@color/colorPrimary">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Account"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_weight="1"
        />
    <Button
        style="?android:attr/actionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR"
        android:textColor="#ffffff"
        android:id="@+id/account_qr"
        />
    <Button
        style="?android:attr/actionButtonStyle"
        android:layout_width="80dp"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/account_logout"
        />
</LinearLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/account_name"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />/>

            <TextView
                android:id="@+id/account_ieeeno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="IEEE No : "
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            <TextView
                android:id="@+id/account_email"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email : "
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />/>
            <TextView
                android:id="@+id/account_mobile"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile No : "
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            <TextView
                android:id="@+id/account_branch"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Branch : "
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            <TextView
                android:id="@+id/account_sem"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Semester : "
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            <TextView
                android:id="@+id/account_usn"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="USN : "
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            <CheckBox
                android:padding="10dp"
                android:id="@+id/account_cs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CS Member"
                android:enabled="false"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
